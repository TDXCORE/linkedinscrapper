{
  "title": "LinkedIn Profile Scraper Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "profileUrls": {
      "title": "LinkedIn Profile URLs",
      "type": "array",
      "description": "List of LinkedIn profile URLs to scrape",
      "editor": "stringList",
      "patternValue": "^https:\\/\\/(www\\.)?linkedin\\.com\\/in\\/[a-zA-Z0-9-]+\\/?$",
      "minItems": 1,
      "maxItems": 100
    },

    "email": {
      "title": "LinkedIn Email (optional)",
      "type": "string",
      "description": "Login email",
      "editor": "textfield",
      "isSecret": true
    },
    "password": {
      "title": "LinkedIn Password (optional)",
      "type": "string",
      "description": "Login password",
      "editor": "textfield",
      "isSecret": true
    },

    "geminiApiKey": {
      "title": "Google Gemini Pro 2.5 API Key",
      "type": "string",
      "description": "API key for Gemini analysis",
      "editor": "textfield",
      "isSecret": true
    },
    "jigsawstackApiKey": {
      "title": "JigsawStack API Key",
      "type": "string",
      "description": "API key for JigsawStack proxy service",
      "editor": "textfield",
      "isSecret": true
    },

    "scrapingOptions": {
      "title": "Scraping Configuration",
      "type": "object",
      "description": "Advanced scraping options (JSON)",
      "editor": "json",
      "default": {
        "maxPostsPerProfile": 100,
        "includeMediaUrls": true,
        "useAiAnalysis": true,
        "delayBetweenRequests": 3000
      }
    },
    "outputOptions": {
      "title": "Output Configuration",
      "type": "object",
      "description": "Output format and storage (JSON)",
      "editor": "json",
      "default": {
        "generateExcel": true,
        "saveToDataset": true,
        "excelFileName": "linkedin_profile_analysis.xlsx"
      }
    }
  },
  "required": ["profileUrls", "geminiApiKey", "jigsawstackApiKey"]
}
