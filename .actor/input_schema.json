{
  "title": "LinkedIn Profile Scraper Input",
  "description": "Lista de perfiles y opciones básicas",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "profileUrls": {
      "title": "LinkedIn Profile URLs",
      "type": "array",
      "description": "Una o más URLs de perfiles de LinkedIn",
      "editor": "stringList",
      "patternValue": "^https:\\/\\/(www\\.)?linkedin\\.com\\/in\\/[a-zA-Z0-9-_%]+\\/?$",
      "minItems": 1,
      "maxItems": 100
    },
    "email": {
      "title": "LinkedIn Email (opcional)",
      "type": "string",
      "editor": "textfield",
      "isSecret": true
    },
    "password": {
      "title": "LinkedIn Password (opcional)",
      "type": "string",
      "editor": "textfield",
      "isSecret": true
    },
    "geminiApiKey": {
      "title": "Gemini API Key (opcional)",
      "type": "string",
      "editor": "textfield",
      "isSecret": true
    },
    "jigsawstackApiKey": {
      "title": "JigsawStack API Key (opcional)",
      "type": "string",
      "editor": "textfield",
      "isSecret": true
    },
    "scrapingOptions": {
      "title": "Scraping Configuration",
      "type": "object",
      "description": "Opciones avanzadas (JSON)",
      "editor": "json",
      "default": {
        "maxPostsPerProfile": 50,
        "includeMediaUrls": true,
        "useAiAnalysis": false,
        "delayBetweenRequestsMs": 2000
      }
    },
    "outputOptions": {
      "title": "Output Configuration",
      "type": "object",
      "description": "Formato/almacenamiento (JSON)",
      "editor": "json",
      "default": {
        "saveToDataset": true,
        "generateExcel": false,
        "excelFileName": "linkedin_profile_analysis.xlsx"
      }
    }
  },
  "required": ["profileUrls"]
}
